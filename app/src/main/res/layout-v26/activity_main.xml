<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:fillViewport="false">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_1"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"

        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:autoSizeTextType="uniform"

        android:fontFamily="sans-serif-condensed"
        android:text="@string/what_is_the_name_of_your_internet_service_provider"

        android:textAllCaps="true" />
       <CheckBox
           android:id="@+id/checkbox_safaricom"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/safaricom"
           android:fontFamily="sans-serif-condensed"
           android:layout_margin="3dp"

           android:textAllCaps="true">

       </CheckBox>
    <CheckBox
        android:id="@+id/checkbox_faiba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/faiba"
        android:fontFamily="sans-serif-condensed"
        android:textAllCaps="true"
        android:onClick="onCheckboxClicked"
        android:layout_margin="3dp"
        tools:ignore="DuplicateIds"
         >

    </CheckBox>
    <CheckBox
        android:id="@+id/checkbox_airtel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/airtel"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-condensed"
        android:layout_margin="3dp"
        android:onClick="onCheckboxClicked"
       >

    </CheckBox>
    <CheckBox
        android:id="@+id/checkbox_telkom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/telkom"
        android:fontFamily="sans-serif-condensed"
        android:textAllCaps="true"
        android:layout_margin="3dp"
        android:onClick="onCheckboxClicked"
         >

    </CheckBox>
    <CheckBox
        android:id="@+id/checkbox_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/others"
        android:fontFamily="sans-serif-condensed"
        android:textAllCaps="true"
        android:layout_margin="3dp"
        android:onClick="onCheckboxClicked"
         >

    </CheckBox>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/question_2"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

       android:textAllCaps="true"


        android:fontFamily="sans-serif-condensed"
        android:text="@string/what_do_you_like_about_the_internet_service_provider_s"/>
    <EditText
        android:hint="@string/what_do_you_like_about_the_internet_service_provider_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plain_text_input"
        android:inputType="text"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_3"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorPrimaryDark"
        android:textAllCaps="true"
         />
    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

       android:scrollbars="vertical"
        android:layout_margin="16dp"
        android:text="@string/what_is_your_mobile_daily_budget"
        android:fontFamily="sans-serif-condensed"
        android:textAllCaps="true"
         >


    </TextView>

    <RadioButton
        android:id="@+id/radio_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:onClick="onRadioButtonClicked"
        android:text="@string/ksh_50_and_above"

        android:fontFamily="sans-serif-condensed"
         />

    <RadioButton
        android:id="@id/radio_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onRadioButtonClicked"
        android:text="@string/ksh_50_and_below"

        android:fontFamily="sans-serif-condensed"/>

</LinearLayout>
</ScrollView>